{
  "name": "mon-app-js",
  "version": "1.0.0",
  "description": "Application JavaScript pour TP Jenkins",
  "main": "src/app.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --ci --reporters=default --reporters=jest-junit",
    "build": "npm run copy-files",
    "copy-files": "if not exist dist mkdir dist && xcopy /E /I /Y mon-app-js\\src\\* dist\\ && copy mon-app-js\\src\\app.js dist\\index.js",
    "clean": "rmdir /S /Q dist && rmdir /S /Q node_modules"
  },
  "dependencies": {
    "express": "^4.18.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "jest-junit": {
    "output": "test-results.xml"
  }
}
